{
  "name": "snow-prompt-builder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "docker:build": "docker build -t snow-prompt-builder .",
    "docker:run": "docker run -p 3000:3000 snow-prompt-builder",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:build": "docker-compose up --build -d",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "groq-sdk": "^0.22.0",
    "next": "15.3.2",
    "next-auth": "^4.24.11",
    "prisma": "^6.16.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "@types/node": "22.15.19",
    "@types/react": "19.1.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3"
  }
